# Informations Site Principal
SITE_NAME=site1
SITE_HOSTNAME=192.168.1.100
SITE_NETWORK=192.168.1.0/24

# Ports services site principal
KEYCLOAK_PORT=8082
NEXTCLOUD_PORT=8080
ZABBIX_PORT=8081
PGADMIN_PORT=8083

# URLs complètes pour Keycloak
KEYCLOAK_FRONTEND_URL=http://192.168.1.100:8082
NEXTCLOUD_URL=http://192.168.1.100:8080
ZABBIX_URL=http://192.168.1.100:8081

# Base de données PostgreSQL
POSTGRES_DB=keycloak
POSTGRES_USER=keycloak
POSTGRES_PASSWORD=keycloak_db_pass123

# Admin Keycloak
KEYCLOAK_ADMIN_USER=admin
KEYCLOAK_ADMIN_PASSWORD=admin

# Configuration Keycloak
KC_LOG_LEVEL=INFO

# PgAdmin
PGADMIN_EMAIL=admin@keycloak.local
PGADMIN_PASSWORD=pgadmin123

# Site DR pour synchronisation
DR_SITE_HOSTNAME=10.0.1.100
DR_SITE_USER=backup
DR_SITE_PATH=/opt/backups