POSTGRES_PASSWORD=keycloak_db_pass123

# Admin Keycloak (même config)
KEYCLOAK_ADMIN_USER=admin
KEYCLOAK_ADMIN_PASSWORD=admin

# Configuration Keycloak
KC_LOG_LEVEL=INFO

# PgAdmin
PGADMIN_EMAIL=admin@keycloak.local
