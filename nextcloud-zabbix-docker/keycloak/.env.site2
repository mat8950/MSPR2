# Informations Site DR
SITE_NAME=site2
SITE_HOSTNAME=10.0.1.100
SITE_NETWORK=10.0.1.0/24

# Ports services site DR
KEYCLOAK_PORT=8082
NEXTCLOUD_PORT=8080
ZABBIX_PORT=8081
PGADMIN_PORT=8083

# URLs complètes pour Keycloak
KEYCLOAK_FRONTEND_URL=http://10.0.1.100:8082
NEXTCLOUD_URL=http://10.0.1.100:8080
ZABBIX_URL=http://10.0.1.100:8081

# Base de données PostgreSQL (même config)
POSTGRES_DB=keycloak
